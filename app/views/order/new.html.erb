<section class="tpl-order">
	<div class="container">
		<%= form_for @order, url: order_path do |f| %>
        <% Order::categories.each do |key, category| %>
          <%= f.label :key, key %>
          <%= f.radio_button :category, category %>
        <% end %>

        <% Order::pricings.each do |key, pricing| %>
          <%= f.label :key, key %>
          <%= f.radio_button :pricing, pricing %>
        <% end %>
        <%= f.submit %>
    <% end %>
	</div>
</section>
